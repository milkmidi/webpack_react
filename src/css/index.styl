@require 'base/reset.css'
fontFamily = Helvetica, Verdana, Arial, "微軟正黑體", "Microsoft JhengHei", "儷黑 Pro", "LiHei Pro", sans-serif

html
  -webkit-font-smoothing antialiased
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
*, body, html
  font-family fontFamily
input, button, select, optgroup, textarea
  font-family fontFamily
  font-size 1rem
html, 
body, 
#app
  width 100%
main
section
  display block

